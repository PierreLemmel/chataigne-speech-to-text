{
    "name": "Speech to text",
    "type": "OSC",
    "path": "Transcription",
    "version": "1.0.0",
    "description": "Get transcription data from a microphone input",
    "author": "Pierre Lemmel",
    "hasInput": true,
    "hasOutput": true,
    "url": "https://github.com/PierreLemmel/chataigne-speech-to-text",
    "downloadURL": "https://github.com/PierreLemmel/chataigne-speech-to-text/releases/download/Module/module-1.0.0.zip",

    "hideDefaultParameters": [
        "autoRange",
        "autoFeedback",
        "useHierarchy",
        "colorSendMode",
        "booleanSendMode",
        "clearValues",
        "pass_through"
    ],
    "defaults": {
        "OSC Input": {
			"localPort": 9000
		},
		"OSC Outputs": {
			"OSC Output": {
				"Remote port": 9001
			}
		}
    },
    "hideDefaultCommands": true,

    "scripts": [
        "speech-to-text.js"
    ],

    "parameters": {
        "Transcription Running": {
            "type": "Boolean",
            "readOnly": true,
            "default": false
        },
        "Start Transcription": {
            "type": "Trigger"
        },
        "Stop Transcription": {
            "type": "Trigger"
        },
        "Clear values": {
            "type": "Trigger"
        },
        
        "Transcription": {
            "type": "Container",
            
            "Launch Script": {
                "type": "File",
                "default": "",
                "description": "Path to the Transcription launch script (launch.bat)"
            },

            "Google Cloud Credentials": {
                "type": "File",
                "default": "",
                "description": "Path to the Google Cloud credentials file (service-account.json). See https://console.cloud.google.com/projectselector2/iam-admin/serviceaccounts"
            },

            "Google Cloud Project ID": {
                "type": "String",
                "default": "project-id",
                "description": "Google Cloud project ID"
            },

            "Microphone": {
                "type": "Integer",
                "default": 0,
                "min": 0,
                "description": "Index of the microphone to use for transcription. Index listing and hot reloading are not supported yet."
            }
        }
    },

    "values": {

        "sentences": {
            "type": "Container"
        }

    },

    "commands": {
        "Start transcription": {
            "menu": "",
            "callback": "startTranscription"
        },
        "Stop transcription": {
            "menu": "",
            "callback": "stopTranscription"
        },
        "Clear values": {
            "menu": "",
            "callback": "clearValues"
        }
    }
}